generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  Id Int @id @default(autoincrement()) 
  username String @unique 
  email String @unique 
  password String 
  Image   String 
  createdAt  DateTime  
  message   Messages[] 
} 

model Messages{
  Id Int @id @default(autoincrement()) 
  senderId Int 
  RecieverID Int 
  message String 
  UserID Int 
  User   User   @relation(fields: [UserID],references: [Id])
}