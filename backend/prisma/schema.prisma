generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  Id            Int @id @default(autoincrement()) 
  username      String @unique 
  email         String @unique 
  password      String 
  Image         String? 
  createdAt     DateTime?  
  message       Messages[] 
  adminRoom     rooms[] @relation("admin")
  userRoom      rooms[]@relation("normalUser")        
} 

model Messages{
  Id Int @id @default(autoincrement()) 
  senderId Int 
  RecieverID Int 
  message String 
  User   User   @relation(fields: [senderId],references: [Id])
  roomId   Int
  room   rooms @relation(fields: [roomId],references: [id])
}

model rooms{
  id Int @id @default(autoincrement()) 
  roomId Int @unique @default(autoincrement())  
  createdAt DateTime? 
  adminId   Int
  admin  User @relation(name: "admin",fields: [adminId],references: [Id]) 
  userId  Int 
  user   User @relation(name: "normalUser",fields: [userId],references: [Id])
  chats    Messages[] 
}